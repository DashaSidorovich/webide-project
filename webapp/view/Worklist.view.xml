<mvc:View
	controllerName="lesson1sidorovich.lesson1sidorovich.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/zjblessons_base_Headers',
					sorter: {
						path: 'Created',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearch"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="nameColumnDocumentNumber">
						<Text text="{i18n>tableNameColumnTitleDocumentNumber}" id="nameColumnTitleDocumentNumber"/>
					</Column>
				</columns>
				<columns>
					<Column id="nameColumnDocumentDate">
						<Text text="{i18n>tableNameColumnTitleDocumentDate}" id="nameColumnTitleDocumentDate"/>
					</Column>
				</columns>
				<columns>
					<Column id="nameColumnPlantText">
						<Text text="{i18n>tableNameColumnTitlePlantText}" id="nameColumnTitlePlantText"/>
					</Column>
				</columns>
				<columns>
					<Column id="nameColumnRegionText">
						<Text text="{i18n>tableNameColumnTitleRegionText}" id="nameColumnTitleRegionText"/>
					</Column>
				</columns>
				<columns>
					<Column id="nameColumnDescription">
						<Text text="{i18n>tableNameColumnTitleDescription}" id="nameColumnTitleDescription"/>
					</Column>
				</columns>
				<columns>
					<Column id="nameColumnCreated">
						<Text text="{i18n>tableNameColumnTitleCreated}" id="nameColumnTitleCreated"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<ObjectIdentifier
								title="{DocumentNumber}"/>
						</cells>
						<cells>
							<Text
								text="{path: 'DocumentDate', type: 'sap.ui.model.type.Date', 
								formatOptions: {style: 'short'} }"/>
						</cells>
						<cells>
							<ObjectIdentifier
								title="{PlantText}"/>
						</cells>
						<cells>
							<ObjectIdentifier
								title="{RegionText}"/>
						</cells>
						<cells>
							<ObjectIdentifier
								title="{Description}"/>
						</cells>
						<cells>
							<Text
								text="{path: 'Created', type: 'sap.ui.model.type.DateTime', 
								formatOptions: {pattern: 'HH:mm dd/MM/yyyy'} }"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>


	</semantic:SemanticPage>

</mvc:View>